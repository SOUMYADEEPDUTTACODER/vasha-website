# GPU-enabled Dockerfile for Vashafront Backend
# Use this for AWS EC2 g4dn.xlarge or other GPU instances

FROM nvidia/cuda:11.8.0-runtime-ubuntu22.04

# Prevent interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3-pip \
    python3-venv \
    git \
    curl \
    wget \
    ffmpeg \
    libportaudio2 \
    portaudio19-dev \
    build-essential \
    libssl-dev \
    libffi-dev \
    libgl1-mesa-glx \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Set Python 3.10 as default
RUN update-alternatives --install /usr/bin/python python /usr/bin/python3.10 1 && \
    update-alternatives --install /usr/bin/pip pip /usr/bin/pip3 1

# Upgrade pip
RUN pip install --no-cache-dir --upgrade pip setuptools wheel

# Ensure any old 'whisper' package is removed (we use openai-whisper)
RUN pip uninstall -y whisper || true

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .

# Install build dependencies for pyworld (TTS dependency)
RUN apt-get update && apt-get install -y \
    cmake \
    libsndfile1-dev \
    && rm -rf /var/lib/apt/lists/*

# Install PyTorch with CUDA 11.8 support (for g4dn.xlarge)
RUN pip install --no-cache-dir \
    torch torchaudio --index-url https://download.pytorch.org/whl/cu118

# Install numpy first (fixes pyworld build issue - must be installed before TTS)
RUN pip install --no-cache-dir "numpy<2.0"

# Downgrade setuptools to a version compatible with pyworld
RUN pip install --no-cache-dir "setuptools<70.0"

# Install most packages first (excluding TTS which pulls in pyworld)
RUN pip install --no-cache-dir \
    fastapi \
    uvicorn \
    pymongo \
    "passlib[bcrypt]==1.7.4" \
    "bcrypt==4.0.1" \
    python-dotenv \
    python-jose \
    twilio \
    openai-whisper \
    faster-whisper \
    transformers \
    spacy \
    jiwer \
    scipy \
    sounddevice \
    yt-dlp \
    ffmpeg-python \
    python-multipart \
    "googletrans==4.0.0rc1" \
    deep-translator \
    IndicTransToolkit \
    sentencepiece \
    gTTS \
    pydub \
    soundfile \
    parler-tts \
    fasttext-wheel \
    huggingface_hub \
    paddlepaddle-gpu \
    paddleocr \
    pillow \
    opencv-python-headless

# Install TTS (pyworld may fail, but that's okay - it's optional)
# Use --no-build-isolation to use already-installed numpy
RUN pip install --no-cache-dir --no-build-isolation TTS || \
    (echo "Warning: TTS/pyworld installation failed, but continuing..." && \
     pip install --no-cache-dir TTS --no-deps || true)

# Install spaCy language model
RUN python -m spacy download en_core_web_lg

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p tts_output chunks temp_audio

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PORT=8000
ENV NVIDIA_VISIBLE_DEVICES=all
ENV NVIDIA_DRIVER_CAPABILITIES=compute,utility
ENV PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/docs || exit 1

# Run the application
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]
