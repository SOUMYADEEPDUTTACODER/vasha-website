@startuml Vasha AI - Language Support Chart
!theme plain
skinparam backgroundColor #FFFFFF
skinparam defaultFontName "Arial"
skinparam defaultFontSize 9
skinparam roundcorner 8
skinparam shadowing false

skinparam rectangle {
    BorderColor #333333
    BorderThickness 1
    FontColor #000000
    FontSize 8
}

' Horizontal layout - Global on left, Indic on right
package "Global Languages (14)" #4A90E2 {
    rectangle "English, Spanish, French, Italian,\nPortuguese, German, Russian, Arabic,\nPersian, Indonesian, Japanese,\nKorean, Chinese, Turkish" as GlobalList #BBDEFB
}

package "Indic Languages (22)" #FF6B6B {
    rectangle "Hindi (hi), Bengali (bn), Tamil (ta), Telugu (te),\nGujarati (gu), Marathi (mr), Kannada (kn), Malayalam (ml),\nPunjabi (pa), Odia (or), Assamese (as), Nepali (ne),\nSanskrit (sa), Urdu (ur), Sindhi (sd), Kashmiri (ks),\nKonkani (kok), Dogri (doi), Bodo (brx), Maithili (mai),\nManipuri (mni), Santali (sat)" as IndicList #FFB3BA
}

' Model lists (compact) â€” connected to each language block
rectangle "Global Models:\nASR: Whisper / Faster-Whisper\nMT: NLLB-200 / Google\nTTS: XTTS / gTTS" as GlobalModels #E8F0FE

rectangle "Indic Models:\nASR: Indic Conformer (AI4Bharat) / Whisper\nMT: IndicTrans2 / Google\nTTS: Indic Parler-TTS / gTTS" as IndicModels #FFE3E3

GlobalList ..[#4A90E2]..> GlobalModels
IndicList  ..[#FF6B6B]..> IndicModels

@enduml
